read -p "Drive# " drive
read -p "BarID: " barid
read -p "DBase: " dbase
read -p " DBID: " dbid

final="$barid [$dbase-$dbid]"

dvdbackup -Mpi /dev/sr$drive -n $barid -ra
mv "$barid" "$final"

exstat=$?
if [ $exstat -ne 0 ]; then
    rm -r $barid
    safecopy --stage1 /dev/sr0 "$final.iso"
    safecopy --stage2 /dev/sr0 "$final.iso"
    safecopy --stage3 /dev/sr0 "$final.iso"

    dvdbackup -Mpi "$final.iso" -n $barid
    mv $barid "$final"
    rm "$barid" "$final.iso"
fi

rm stage*.badblocks
eject /dev/sr$drive
